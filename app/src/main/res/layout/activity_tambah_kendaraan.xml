<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_car"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logo_dark"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/img_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_nama"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000"
            android:text="Nama"/>

        <EditText
            android:background="@drawable/bg_input_data"
            android:layout_below="@id/text_nama"
            android:id="@+id/form_nama"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="Nama Kendaraan"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_jenis"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000"
            android:text="Jenis Kendaraan"/>

        <EditText
            android:background="@drawable/bg_input_data"
            android:layout_below="@id/text_jenis"
            android:id="@+id/form_jenis"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="(City car/ Adventure car/ Minibus)"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_harga"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000"
            android:text="Harga"/>

        <EditText
            android:background="@drawable/bg_input_data"
            android:layout_below="@id/text_harga"
            android:id="@+id/form_harga"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="Harga sewa per hari"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <TextView
                android:id="@+id/btn_gambar"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Pilih file"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#000"
                android:background="@drawable/bg_filter"/>

            <TextView
                android:id="@+id/text_nama_gambar"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/btn_gambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#555"
                android:textStyle="italic"
                android:text="Gambar.jpg"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/btn_tambah"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="tambahkan"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_btn_login"/>

    </LinearLayout>

</RelativeLayout>